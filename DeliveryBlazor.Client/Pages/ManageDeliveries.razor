@page "/manage-deliveries"

@inherits LayoutComponentBase
<PageTitle>Manage Deliveries</PageTitle>

<div class="page-container">
    <!-- Imaginea de sus -->
    <div class="header-image"></div>

    <!-- Conținut principal -->
    <div class="form-and-table">
        <!-- Secțiunea formularului -->
        <div class="form-section">
            <form>
                <div class="form-group">
                    <label for="id">Id</label>
                    <input type="text" id="id" class="form-control" placeholder="Enter Id" />
                </div>
                <div class="form-group">
                    <label for="clientName">Client Name</label>
                    <input type="text" id="clientName" class="form-control" placeholder="Enter Client Name" />
                </div>
                <div class="form-group">
                    <label for="courierName">Courier Name</label>
                    <input type="text" id="courierName" class="form-control" placeholder="Enter Courier Name" />
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" id="address" class="form-control" placeholder="Enter Address" />
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select id="status" class="form-control">
                        <option value="Pending">Pending</option>
                        <option value="Delivered">Delivered</option>
                        <option value="Canceled">Canceled</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" id="date" class="form-control" />
                </div>
            </form>
        </div>

        <!-- Secțiunea tabelului -->
        <div class="table-section">
            <div class="table-controls">
                
                    <form>
                        <input type="text" id="searchInput" onkeyup="searchFunction()" placeholder="Search by">
                    </form>
              
                 
                     <button>Search</button>
                <button>Show All</button>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client Name</th>
                        <th>Courier Name</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody id="dataRows">
                    <tr>
                        <td>1</td>
                        <td>John Due</td>
                        <td>Alex Smith</td>
                        <td>12 Main</td>
                        <td>Pending</td>
                        <td>01.08.24</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Max Pro</td>
                        <td>Michael Davis</td>
                        <td>56 Oak St</td>
                        <td>Delivered</td>
                        <td>05.07.24</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Andro Bear</td>
                        <td>Jane Roe</td>
                        <td>52 Pine</td>
                        <td>Canceled</td>
                        <td>11.11.24</td>
                    </tr>
                    <tr>
                        <td>4</td>
                        <td>Sara Pie</td>
                        <td>Alex Brown</td>
                        <td>14 Main</td>
                        <td>Delivered</td>
                        <td>01.05.24</td>
                    </tr>
                </tbody>
            </table>
           
        </div>
    </div>
   
    <div class="button-section">
        <button class="action-button-3d">New Delivery</button>
        <button class="action-button-3d">Add Delivery</button>
        <button class="action-button-3d">Update Delivery</button>
        <button class="action-button-3d">Delete Delivery</button>
        <button class="action-button-3d">Show All</button>
    </div>

</div>

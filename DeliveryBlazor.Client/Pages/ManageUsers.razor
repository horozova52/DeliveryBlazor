@page "/manage-users"

@inherits LayoutComponentBase
<PageTitle>Manage Users</PageTitle>

<div class="page-container">
    <div class="top-bar">
        <div>
            <select>
                <option>All Roles</option>
                <option>Admin</option>
                <option>Courier</option>
                <option>Client</option>
            </select>
            <select>
                <option>All Statuses</option>
                <option>Active</option>
                <option>Inactive</option>
            </select>
            <input class="search-input" type="text" placeholder="Search by name or email" />
        </div>
        <button class="new-user-btn">New User</button>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Avatar</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img class="avatar" src="/images/Avatars/cool.png" alt="User 1" /></td>
                    <td>John Doe</td>
                    <td>Admin</td>
                    <td><span class="status status-active">Active</span></td>
                    <td>johndoe@example.com</td>
                    <td>
                        <button class="action-btn edit-btn">Edit</button>
                        <button class="action-btn delete-btn">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td><img class="avatar" src="/images/Avatars/emoji.png" alt="User 2" /></td>
                    <td>Jane Smith</td>
                    <td>Courier</td>
                    <td><span class="status status-inactive">Inactive</span></td>
                    <td>janesmith@example.com</td>
                    <td>
                        <button class="action-btn edit-btn">Edit</button>
                        <button class="action-btn delete-btn">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

